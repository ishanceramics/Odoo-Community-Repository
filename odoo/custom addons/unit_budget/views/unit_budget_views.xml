<odoo>
    <!-- Form View -->
    <record id="view_unit_budget_form" model="ir.ui.view">
        <field name="name">unit.budget.form</field>
        <field name="model">unit.budget</field>
        <field name="arch" type="xml">
            <form string="Unit Budget">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" 
                            class="btn-success" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state in ['approved', 'cancelled']"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" 
                            invisible="state not in ['cancelled', 'confirmed']"/>
                    <!-- TEMPORARILY REMOVED: Marketing Request button -->
                    <!-- <button name="action_view_marketing_requests" string="View Marketing Requests" 
                            type="object" class="btn-info" invisible="not id"/> -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="unit_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="year"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                        <group>
                            <field name="notes" placeholder="Budget notes and comments..."/>
                        </group>
                    </group>
                    
                    <!-- Budget Summary -->
                    <group string="Budget Summary">
                        <group>
                            <field name="total_budget" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="budget_utilization" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="remaining_budget" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="utilization_percentage" widget="percentage" readonly="1"/>
                        </group>
                        <group>
                            <field name="store_promotion_budget" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="product_promotion_budget" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="influencer_promotion_budget" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <!-- TEMPORARILY REMOVED: Marketing request summary -->
                            <!-- <field name="total_marketing_requests" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="pending_marketing_requests" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="approved_marketing_requests" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/> -->
                        </group>
                    </group>

                    <notebook>
                        <page string="Budget Lines" name="budget_lines">
                            <field name="budget_line_ids" readonly="state == 'approved'">
                                <list editable="bottom">
                                    <field name="allocation_type"/>
                                    <field name="month"/>
                                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="utilized_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <field name="remaining_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <!-- TEMPORARILY REMOVED: Marketing request tracking columns -->
                                    <!-- <field name="total_requested_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1" string="Total Requested"/>
                                    <field name="pending_request_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1" string="Pending Requests"/>
                                    <field name="approved_request_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1" string="Approved Requests"/>
                                    <field name="available_for_request" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1" string="Available for Request"/> -->
                                    <field name="utilization_percentage" widget="percentage" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        
                        <!-- TEMPORARILY REMOVED: Marketing Requests page -->
                        <!-- <page string="Marketing Requests" name="marketing_requests">
                            <group string="Marketing Request Summary">
                                <group>
                                    <field name="total_marketing_requests" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <field name="pending_marketing_requests" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                </group>
                                <group>
                                    <field name="approved_marketing_requests" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                    <button name="action_view_marketing_requests" string="View All Marketing Requests" 
                                            type="object" class="btn-info" invisible="not id"/>
                                </group>
                            </group>
                            
                            <field name="marketing_request_summary_ids" readonly="1">
                                <list>
                                    <field name="marketing_request_id" string="Request"/>
                                    <field name="requestor_name"/>
                                    <field name="allocation_type"/>
                                    <field name="month_name"/>
                                    <field name="requested_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="approval_status" widget="badge"/>
                                    <field name="deadline"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page> -->
                    </notebook>
                </sheet>
               
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_unit_budget_tree" model="ir.ui.view">
        <field name="name">unit.budget.tree</field>
        <field name="model">unit.budget</field>
        <field name="arch" type="xml">
            <list string="Unit Budgets">
                <field name="name"/>
                <field name="unit_id"/>
                <field name="year"/>
                <field name="total_budget" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="budget_utilization" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="remaining_budget" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="utilization_percentage" widget="percentage"/>
                <field name="state" widget="badge"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_unit_budget_search" model="ir.ui.view">
        <field name="name">unit.budget.search</field>
        <field name="model">unit.budget</field>
        <field name="arch" type="xml">
            <search string="Unit Budget Search">
                <field name="name"/>
                <field name="unit_id"/>
                <field name="year"/>
                <field name="state"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <separator/>
                <filter string="Current Year" name="current_year" domain="[('year', '=', context_today().year)]"/>
                <group expand="0" string="Group By">
                    <filter string="Unit" name="unit" context="{'group_by': 'unit_id'}"/>
                    <filter string="Year" name="year" context="{'group_by': 'year'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Budget Line List View -->
    <record id="view_unit_budget_line_tree" model="ir.ui.view">
        <field name="name">unit.budget.line.tree</field>
        <field name="model">unit.budget.line</field>
        <field name="arch" type="xml">
            <list string="Budget Lines" editable="bottom">
                <field name="budget_id"/>
                <field name="allocation_type"/>
                <field name="month"/>
                <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="utilized_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="remaining_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="utilization_percentage" widget="percentage"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Budget Line Search View -->
    <record id="view_unit_budget_line_search" model="ir.ui.view">
        <field name="name">unit.budget.line.search</field>
        <field name="model">unit.budget.line</field>
        <field name="arch" type="xml">
            <search string="Budget Line Search">
                <field name="budget_id"/>
                <field name="allocation_type"/>
                <field name="month"/>
                <group expand="0" string="Group By">
                    <filter string="Budget" name="budget" context="{'group_by': 'budget_id'}"/>
                    <filter string="Allocation Type" name="allocation_type" context="{'group_by': 'allocation_type'}"/>
                    <filter string="Month" name="month" context="{'group_by': 'month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Budget Line Action -->
    <record id="action_unit_budget_line" model="ir.actions.act_window">
        <field name="name">Budget Lines</field>
        <field name="res_model">unit.budget.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_unit_budget_line_tree"/>
        <field name="search_view_id" ref="view_unit_budget_line_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No budget lines found!
            </p>
        </field>
    </record>

    <!-- Main Budget Action -->
    <record id="action_unit_budget" model="ir.actions.act_window">
        <field name="name">Unit Budgets</field>
        <field name="res_model">unit.budget</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_unit_budget_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first unit budget!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_unit_budget_root"
        name="Unit Budget"
        sequence="15"/>

    <menuitem id="menu_unit_budget"
        name="Budgets"
        parent="menu_unit_budget_root"
        action="action_unit_budget"
        sequence="1"/>

    <menuitem id="menu_unit_budget_lines"
        name="Budget Lines"
        parent="menu_unit_budget_root"
        action="action_unit_budget_line"
        sequence="2"/>

    <!-- Add this Budget Line Form View after your existing views -->
    <record id="view_unit_budget_line_form" model="ir.ui.view">
        <field name="name">unit.budget.line.form</field>
        <field name="model">unit.budget.line</field>
        <field name="arch" type="xml">
            <form string="Budget Line">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="budget_id"/>
                            <field name="allocation_type"/>
                            <field name="month"/>
                            <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="utilized_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="remaining_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                            <field name="utilization_percentage" widget="percentage" readonly="1"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>
                </sheet>
                
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

</odoo>