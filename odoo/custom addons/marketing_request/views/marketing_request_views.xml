    <!-- Search View -->
    <record id="view_marketing_request_search" model="ir.ui.view">
        <field name="name">marketing.request.search</field>
        <field name="model">marketing.request</field>
        <field name="arch" type="xml">
            <search string="Marketing Requests">
                <field name="name"/>
                <field name="requestor_name"/>
                <field name="department"/>
                <field name="request_type"/>
                <field name="stage"/>
                <field name="allocated_budget"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('approval_status', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('approval_status', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('approval_status', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('approval_status', '=', 'rejected')]"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '3')]"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="department" context="{'group_by': 'department'}"/>
                    <filter string="Request Type" name="request_type" context="{'group_by': 'request_type'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'approval_status'}"/>
                    <filter string="Stage" name="stage" context="{'group_by': 'stage'}"/>
                    <filter string="Unit" name="unit" context="{'group_by': 'unit'}"/>
                    <filter string="Allocated Budget" name="allocated_budget" context="{'group_by': 'allocated_budget'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_marketing_request" model="ir.actions.act_window">
        <field name="name">Marketing Requests</field>
        <field name="res_model">marketing.request</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_marketing_request_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first marketing request!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_marketing_request_root"
        name="Marketing Requests"
        sequence="10"
        web_icon="marketing_request,static/description/icon.png"/>

    <menuitem id="menu_marketing_request"
        name="Requests"
        parent="menu_marketing_request_root"
        action="action_marketing_request"
        sequence="1"/>

