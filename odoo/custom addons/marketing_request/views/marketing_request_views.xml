<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_marketing_request_tree" model="ir.ui.view">
        <field name="name">marketing.request.tree</field>
        <field name="model">marketing.request</field>
        <field name="arch" type="xml">
            <list string="Marketing Requests">
                <field name="name"/>
                <field name="requestor_name"/>
                <field name="department"/>
                <field name="request_type"/>
                <field name="priority"/>
                <field name="deadline"/>
                <field name="approval_status"/>
                <field name="approved_by"/>
                <field name="budget"/>
                <field name="storepromotion"/>
                <field name="productpromotion"/>
                <field name="influencerpromotion"/>
                <field name="stage"/>
                <field name="completion_status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_marketing_request_form" model="ir.ui.view">
        <field name="name">marketing.request.form</field>
        <field name="model">marketing.request</field>
        <field name="arch" type="xml">
            <form string="Marketing Request">
                <header>
                    <button name="action_submit" type="object" string="Submit" 
                            invisible="approval_status != 'draft'" 
                            class="btn-primary"/>
                    <button name="action_approve" type="object" string="Approve" 
                            invisible="approval_status  in ['approved', 'draft','rejected']" 
                            class="btn-success"/>
                    <button name="action_cancel" type="object" string="Reject" 
                            invisible="approval_status not in ['submitted', 'draft']" 
                            class="btn-secondary"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                            invisible="approval_status not in ['approved', 'rejected']" 
                            class="btn-secondary"/>
                    <!--<field name="approval_status" widget="statusbar" statusbar_visible="draft,submitted,approved"/>-->
                  <field name="completion_status" widget="statusbar" statusbar_visible="not_started,in_progress,completed,cancelled" clickable="True"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="requestor_name"/>
                            <field name="department"/>
                            <field name="unit"/>
                            <field name="allocated_budget" 
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   invisible="unit == False"/>
                            <field name="request_type"/>
                            <field name="category"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="budget"/>
                            <field name="budget_amount"/>
                            <field name="allocation_type"/>
                            <field name="deadline"/>
                            <field name="stage"/>
                            <!--<field name="completion_status" widget="statusbar" clickable="True"/>-->
                            <field name="approved_by" invisible="approved_by == False"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Product Details">
                            <group>
                                <field name="product_ids" />
                            </group>
                        </page>
                        
                        <page string="Request Breakdown">
                            <group string="Budget Line Selection">
                                <field name="unit_budget_line_ids" 
                                       widget="many2many_tags"
                                       options="{'no_create': True}"
                                       invisible="allocated_budget == False"/>
                            </group>
                            
                            <group string="Request Amounts">
                                <field name="budget_line_amount_ids" nolabel="1" widget="one2many">
                                    <list editable="bottom">
                                        <field name="unit_budget_line_id"/>
                                        <field name="allocation_type"/>
                                        <field name="month"/>
                                        <field name="allocated_amount"/>                                        
                                         <field name="requested_amount"/>
                                         <field name="utilized_amount"/>
                                         <field name="available_amount"/>
                                        <field name="currency_id" invisible="1"/>
                                    </list>
                                    <form string="Budget Line Amount">
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="unit_budget_line_id"/>
                                                    <field name="allocated_amount"/>
                                                    <field name="requested_amount"/>
                                                </group>
                                                <group>
                                                    <field name="utilized_amount"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </group>
                            
                            <group string="Total Summary">
                                <group string="Promotion Amounts (Utilized)">
                                    <field name="storepromotion" widget="monetary"/>
                                    <field name="productpromotion" widget="monetary"/>
                                    <field name="influencerpromotion" widget="monetary"/>
                                    <field name="total_promotion" widget="monetary" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Campaigns">
                            <field name="campaign_ids"/>
                        </page>
                    </notebook>
                </sheet>
                
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

